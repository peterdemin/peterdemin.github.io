{
  "manifest_version": 3,
  "name": "Reader",
  "version": "0.1.0",
  "description": "Capture current page HTML and open it in reader.demin.dev",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://reader.demin.dev/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "Open in Reader",
    "default_icon": {
      "16": "icons/icon-16.png",
      "19": "icons/icon-19.png",
      "24": "icons/icon-24.png",
      "32": "icons/icon-32.png",
      "38": "icons/icon-38.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "reader-capture@demin.dev",
      "strict_min_version": "121.0"
    }
  }
}
