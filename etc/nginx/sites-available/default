# Default server configuration
#
server {
    server_name www.demin.dev demin.dev conference.demin.dev pubsub.demin.dev;
    return 301 https://peter.demin.dev;

    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/demin.dev/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/demin.dev/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot




}

server {
    server_name api.demin.dev;

    listen [::]:443 ssl; # managed by Certbot
    listen 443 ssl http2;
    ssl_certificate /etc/letsencrypt/live/demin.dev/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/demin.dev/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

    location / {
      proxy_pass http://bus;
      proxy_set_header  X-Forwarded-Proto https;
      proxy_set_header Host $http_host;
    }

}

upstream bus {
    server unix:/tmp/bus.sock;
}

server {
    server_name feed.demin.dev;

    listen [::]:443 ssl; # managed by Certbot
    listen 443 ssl http2;
    ssl_certificate /etc/letsencrypt/live/demin.dev/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/demin.dev/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

    location / {
      proxy_pass http://127.0.0.1:8082;
      proxy_set_header  X-Forwarded-Proto https;
      proxy_set_header Host $http_host;
    }

}

server {
    server_name daniel.demin.dev;

    listen [::]:443 ssl; # managed by Certbot
    listen 443 ssl http2;
    ssl_certificate /etc/letsencrypt/live/demin.dev/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/demin.dev/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

    root /var/www/daniel;
    index index.html index.htm;

    location / {
        try_files $uri $uri/ =404; # Serve static files, or return 404 if not found
    }

}

server {
    server_name demin.dev www.demin.dev;
    if ($host = demin.dev) {
        return 301 https://$host$request_uri;
    } # managed by Certbot
    if ($host = www.demin.dev) {
        return 301 https://$host$request_uri;
    } # managed by Certbot
    if ($host = api.demin.dev) {
        return 301 https://$host$request_uri;
    } # managed by Certbot
    listen 80 ;
    listen [::]:80 ;
    return 404; # managed by Certbot
}
